{
    "name": "user-data-for-fraud-prevention",
    "version": "1.0.2",
    "description": "Detects Timezone, screen size, scaling factor, browser plugins, local device IPs etc;",
    "scripts": {
        "test": "jest",
        "build": "webpack",
        "test:coverage": "npm test -- --coverage",
        "test:badges": "npm run test:coverage  && jest-coverage-badges",
        "lint:fix": "eslint '{src,tests}/**/*.js' --fix",
        "lint": "eslint '{src,tests}/**/*.js'",
        "format": "lint-staged",
        "prettier": "prettier '{src,tests}/**/*.js' --write --single-quote --tab-width 4 --no-bracket-spacing --print-width 120",
        "clean": "rm -rf node_modules",
        "rebuild": "npm run clean && npm install && npm run build",
        "prepublishOnly": "webpack"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm test && npm run test:coverage"
        }
    },
    "lint-staged": {
        "**/*.js": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/intuit/user-data-for-fraud-prevention.git"
    },
    "main": "dist/bundle.js",
    "keywords": [
        "Fraud",
        "Prevention",
        "Headers"
    ],
    "author": "skodamarthi",
    "license": "ISC",
    "files": [
        "dist",
        "src/js/index.js",
        "src/js/browserInfoHelper.js",
        "src/js/globalsUtil.js",
        "src/js/hmrc/mtdFraudPrevention.js"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.com/"
    },
    "dependencies": {
        "@babel/preset-env": "^7.10.4",
        "moment": "^2.24.0",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@types/sinon": "^9.0.5",
        "eslint": "^7.4.0",
        "husky": "^4.2.5",
        "jest": "^26.0.1",
        "jest-cli": "^26.1.0",
        "jest-coverage-badges": "^1.1.2",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "react-addons-test-utils": "^15.6.2",
        "sinon": "^7.5.0",
        "ts-jest": "^26.4.0",
        "ts-loader": "^8.0.4",
        "typescript": "^4.0.3",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12"
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-babel",
        "coverageReporters": [
            "json-summary",
            "text",
            "lcov"
        ],
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}",
            "!**/test/**"
        ]
    },
    "directories": {
        "test": "tests"
    }
}